<div class="row">
  <div class="small-6 small-offset-3">
    {{#each flashMessages.queue as |flash|}}
      {{flash-message flash=flash class='flash-message'}}
    {{/each}}

    <h2>Login</h2>

    <form {{action "login" on="submit"}}>
      <div>
        <label>Username or Email</label>
        {{input type="text" value=login id="login" placeholder="Username or Email Address"}}
      </div>

      <div>
        <label>Password</label>
        {{input type="password" id="password" value=password placeholder="Password"}}
      </div>

      <br>
      <button type="submit">Submit</button>
    </form>
  </div>
</div>
